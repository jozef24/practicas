{% extends 'layout.html.twig' %}
{% block userTable%}
<h2>Users</h2>
<table border="1">
    <tr>
        <th>Username</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Actions</th>
    </tr>
    {% for user in users %}
        <tr>
        <td>{{user.username}}</td>
        <td>{{user.firstName}}</td>
        <td>{{user.lastName}}</td>
        <td>{{user.email}}</td>
        <td>
            {% if user.role == 'ADMINISTRATOR' %}
                <strong>Administrador</strong>
            {% elseif user.role == 'AGENTE' %}
                <strong>Agente</strong>
            {%endif%}
            
        </td>
        <td>{{user.createdAt|date('d-m-Y')}}</td>
        <td>{{user.updatedAt|date('d-m-Y')}}</td>
        <td>
            <a href="#">View</a>
            <a href="#">Edit</a>
            <a href="#">Delete</a>
        </td>
    </tr>
    {% endfor %}
</table>
{% endblock userTable %}